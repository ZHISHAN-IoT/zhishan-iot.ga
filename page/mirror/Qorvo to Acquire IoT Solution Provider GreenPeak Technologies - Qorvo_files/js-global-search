function SuggestedItemSelection(n){var t=$("#global-search-value").attr("value"),i;setGlobalMode(t);i=t==3?"des":"key";urlHash=window.location.protocol+"//"+window.location.host+SearchResultsPage+"?"+i+"="+n+"&mode="+t;window.open(urlHash,"_self")}function setGlobalMode(){$("#global-search-value").val(mode);$(".pri-nav-searchinp").each(function(){switch(mode){case 1:$(this).attr("name","key");break;case 2:$(this).attr("name","key");break;case 3:$(this).attr("name","des");break;case 4:$(this).attr("name","key");break;default:$(this).attr("name","key")}})}$(document).ready(function(){function n(){var n=$("#SearchTerm").val();if(n.length<3&&!(n.length>1&&language=="zh-CN")){$("#suggestedTerms").html("");$("#suggestedTerms").hide();return}$.ajax({type:"Get",url:suggestedListUrl,data:{keyword:n},success:function(n){if($(n).find("li").length<=0){$("#suggestedTerms").html("");$("#suggestedTerms").hide();return}$("#suggestedTerms").html(n);$("#suggestedTerms").show()}})}setGlobalMode(1);$("#SearchTerm").keyup(function(t){t.shiftKey||n(!0)});$(document).on("click",".suggestedTerm",function(){var n=this.val();$("#SearchTerm").val(n);$(".pri-nav-searchbtn").click()});$(document).on("click","#GlobalSearch",function(n){var u;$("#SearchTerm").removeClass("error-state");$("#SearchTerm").attr("placeholder",$("#GlobalSearchPlaceholder").val());var r=$("#SearchTerm").val(),t=$("#GlobalSearchValidationErrorMessage").val(),i=$("#GlobalSearchValidationErrorMessageMinimum").val();n.preventDefault();u=$.ajax({type:"POST",contentType:"application/json; charset=utf-8",url:searchBoxValidationUrl,data:"{'searchBoxText':"+JSON.stringify(r)+"}",dataType:"json",success:function(n){if($("#SearchTerm").blur(),n.length==0||n==t)return $("#SearchTerm").addClass("error-state"),$("#SearchTerm").val(""),$("#SearchTerm").val(t),!1;if(n.length>0&&n.length<searchTextLength||n==i)return $("#SearchTerm").addClass("error-state"),$("#SearchTerm").val(""),$("#SearchTerm").val(i),!1;if((n.length>searchTextLength||n.length==searchTextLength)&&n!=t&&n!=i){var r=n.replace(/&quot;/g,'"');r=r.replace(/&amp;/g,"&");$("#SearchTerm").val(r);$("#globalSearchForm").submit()}},error:function(){}})})});$(document).on("focus","#SearchTerm",function(){($("#SearchTerm").val()==$("#GlobalSearchValidationErrorMessage").val()||$("#SearchTerm").val()==$("#GlobalSearchValidationErrorMessageMinimum").val())&&$("#SearchTerm").val("")});$("#searchMode").on("change",function(){$("#global-search-value").val(this.value);switch(this.value){case"1":$("#SearchTerm").attr("name","key");break;case"2":$("#SearchTerm").attr("name","key");break;case"3":$("#SearchTerm").attr("name","des");break;case"4":$("#SearchTerm").attr("name","key");break;default:$("#SearchTerm").attr("name","key")}})